<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/content_main_student"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/next_lecture"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#BC6BE4"
        android:textAlignment="center"
        android:textColor="#fff"
        android:padding="@dimen/_15sdp"
        android:textSize="@dimen/_11ssp"
        android:text="Next Lecture : 10:55 AM, Cryptography and Network Security"
        />
<androidx.core.widget.NestedScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_alignParentEnd="true"
        android:textColor="#36161616"
        android:textAlignment="viewEnd"
        android:layout_margin="@dimen/_13sdp"
        android:textSize="@dimen/_45ssp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/subject_recycler_student_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_80sdp" />

    <LinearLayout
        android:id="@+id/stats"
        android:orientation="horizontal"
        android:layout_below="@+id/subject_recycler_student_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/circularProgressbar_lecture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ProgressBar
                android:id="@+id/circularProgressbar"
                android:layout_centerInParent="true"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:indeterminate="false"
                android:max="100"
                android:progress="70"
                android:secondaryProgress="100"
                android:progressDrawable="@drawable/progress_"/>
            <RelativeLayout
                android:layout_centerInParent="true"
                android:background="@drawable/whitecircle"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp">
                <TextView
                    android:textAlignment="center"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="100"
                    android:textStyle="bold"/>
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_12sdp"
            android:padding="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/circularProgressbar_student_attendance"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_15sdp"
                android:indeterminate="false"
                android:max="100"
                android:progress="30"
                android:backgroundTint="#14DA93"
                />
            <ProgressBar
                android:id="@+id/circularProgressbar_st"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/_95sdp"
                android:layout_height="@dimen/_15sdp"
                android:indeterminate="false"
                android:max="100"
                android:progress="70"
                android:backgroundTint="#14DA93"
                />
            <ProgressBar
                android:id="@+id/circularProgressbar_it"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/_95sdp"
                android:layout_height="@dimen/_15sdp"
                android:indeterminate="false"
                android:max="100"
                android:progress="50"
                android:backgroundTint="#14DA93"
                />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@+id/stats"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp">

    </RelativeLayout>
</RelativeLayout>
</androidx.core.widget.NestedScrollView>
</RelativeLayout>