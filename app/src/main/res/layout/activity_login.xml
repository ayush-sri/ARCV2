<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".activity_login">
<TextView
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Get Started"
    android:textSize="36sp"
    android:textColor="#fff"
    android:layout_margin="25dp"/>
    <TextView
        android:id="@+id/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textSize="34sp"
        android:transitionName="sign_in_to_up"
        android:textColor="#fff"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="90dp"/>

    <EditText
        android:id="@+id/username"
        android:layout_below="@+id/title"
        android:layout_marginTop="198dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="45dp"
        android:hint="Username"
        android:textSize="25sp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_bg"/>
    <EditText
        android:id="@+id/password"
        android:layout_below="@+id/username"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="45dp"
        android:hint="Password"
        android:textSize="25sp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_bg"/>
    <Button
        android:id="@+id/login"
        android:background="@drawable/button_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="60dp"
        android:text="LOGIN"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_marginRight="60dp"/>
    <TextView
        android:id="@+id/sign_in_google"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/googleg_standard_color_18"
        android:layout_marginBottom="85dp"
        android:layout_marginLeft="50dp"
        />
    <TextView
        android:id="@+id/sign_in_facebook"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="f"
        android:layout_alignParentBottom="true"
        android:textColor="#fff"
        android:layout_marginBottom="85dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="190dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@drawable/facebook_btn_bg"
        android:layout_alignLeft="@+id/sign_in_google"/>
    <TextView
        android:layout_alignParentBottom="true"
        android:id="@+id/sign_up_pre"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_marginBottom="165dp"
        android:layout_marginLeft="50dp"
        android:text="Don't have an account ?"
        />
    <TextView
        android:id="@+id/sign_up"
        android:layout_marginBottom="165dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_marginLeft="240dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="Sign up ->"
        android:textColor="@color/status_bar_color"/>
    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="forgot password"
        android:textSize="17sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="250dp"
        android:layout_below="@+id/login"
        />
</RelativeLayout>