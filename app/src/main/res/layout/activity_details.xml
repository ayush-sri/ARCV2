<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/activ_det"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reg_bg">

    <TextView
        android:id="@+id/almost_there"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_70sdp"
        android:text="Almost there !"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="@dimen/_25sdp"
        />
    <TextView
        android:id="@+id/choose_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Choose a pic"
        android:textAlignment="center"
        android:textColor="#fff"
        android:layout_below="@+id/almost_there"
        android:textSize="@dimen/_20sdp"/>

    <RelativeLayout
        android:id="@+id/user_image"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choose_photo">

        <ImageView
            android:id="@+id/dp"
            android:layout_width="@dimen/_90sdp"
            android:layout_centerHorizontal="true"
            android:layout_height="@dimen/_90sdp"
            android:src="@drawable/cam" />

        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/dp"
            android:layout_alignBottom="@+id/dp"
            android:background="@drawable/pencil_drawable" />
    </RelativeLayout>



    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_70sdp"
        android:hint="name"
        android:textSize="@dimen/_14sdp"
        android:layout_below="@+id/user_image"
        android:layout_marginEnd="@dimen/_70sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:padding="@dimen/_8sdp"
        android:background="@drawable/edittext_bg"
        android:inputType="text"/>

    <EditText
        android:id="@+id/email"
        android:textSize="@dimen/_14sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_70sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/edittext_bg"
        android:hint="email"
        android:layout_below="@+id/name"
        android:layout_marginEnd="@dimen/_70sdp"
        android:inputType="textEmailAddress"
        android:padding="@dimen/_8sdp" />

    <EditText
        android:id="@+id/id"
        android:textSize="@dimen/_14sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_70sdp"
        android:layout_marginEnd="@dimen/_70sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/edittext_bg"
        android:hint="Roll Number/Faculty ID"
        android:inputType="text"
        android:layout_below="@+id/email"
        android:padding="@dimen/_10sdp" />

    <Button
        android:id="@+id/done"
        android:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_80sdp"
        android:layout_marginEnd="@dimen/_80sdp"
        android:textSize="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Done"
        android:textColor="#fff"
        android:layout_below="@+id/id"
        android:background="@drawable/button_bg" />
</RelativeLayout>
</FrameLayout>